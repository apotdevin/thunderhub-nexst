{
  "name": "nexst",
  "private": true,
  "version": "1.0.0",
  "description": "Nest + Next starter repository",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:nest && npm run build:next",
    "build:nest": "nest build",
    "build:next": "cd src/client && next build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "upgrade-latest": "npx npm-check -u"
  },
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@nestjs/common": "^8.1.2",
    "@nestjs/config": "^1.0.3",
    "@nestjs/core": "^8.1.2",
    "@nestjs/graphql": "^9.1.1",
    "@nestjs/platform-express": "^8.1.2",
    "apollo-server-express": "^3.4.0",
    "apollo-server-micro": "^3.4.0",
    "bcryptjs": "^2.4.3",
    "bip32": "^2.0.6",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^5.2.0",
    "boltz-core": "^0.4.1",
    "cookie": "^0.4.0",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.25.0",
    "graphql": "^15.7.2",
    "graphql-rate-limit": "^3.3.0",
    "graphql-tools": "^8.2.0",
    "jest-fetch-mock": "^3.0.3",
    "js-yaml": "^3.14.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "next": "^12.0.1",
    "node-fetch": "^2.6.1",
    "numeral": "^2.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-toastify": "^8.0.3",
    "react-tooltip": "^4.2.21",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "secp256k1": "^4.0.2",
    "socks-proxy-agent": "^6.1.0",
    "styled-components": "^5.3.3",
    "styled-react-modal": "^2.1.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.4.1",
    "@types/crypto-js": "^4.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.4",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.176",
    "@types/node": "^16.11.6",
    "@types/node-fetch": "^3.0.3",
    "@types/numeral": "^2.0.2",
    "@types/react": "^17.0.33",
    "@types/secp256k1": "^4.0.3",
    "@types/styled-components": "^5.1.15",
    "@types/styled-react-modal": "^1.2.1",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "apollo-server": "^2.25.2",
    "apollo-server-testing": "^2.25.2",
    "babel-plugin-styled-components": "^1.13.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
